{
  "name": "CalendarForBidIt",
  "description": "Download bid-it calendar as .ics file.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["storage", "activeTab", "scripting","tabs","cookies"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "host_permissions": [
    "https://www.ims.tau.ac.il/"
  ],
  "content_scripts": [
    {
      "matches": ["https://bid-it.appspot.com/*"],
      "js": ["contentScript.js"]
    }
  ]
}